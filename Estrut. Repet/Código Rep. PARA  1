programa
{
	
	funcao inicio()
	{
		inteiro idade, contmenor = 0, contmaior = 0, i

		para(i=0; i<10; i++){
			escreva("Digite a idade: ")
			leia(idade)

			se(idade < 18){
			contmenor++
			
			}senao{
				contmaior++
			}
		}
			escreva("A quantidade de pessoas menor de idade é: ", contmenor)
			escreva("\nA quantidade de pessoas maior de idade é: ", contmaior)
		
	}
}
