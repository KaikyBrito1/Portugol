programa
{
	
	funcao inicio()
	{
		inteiro salario = 0 , total = 0
		escreva("Informe o salario das pessoas da sua familia(0 para encerrar): ")
		leia(salario)
		enquanto(salario > 0){
		total = total + salario
			escreva("Informe novo salario(0 para encerrar):" )
		leia(salario)}
			escreva("Salario da sua familia é: ", total)
		
	}
}
