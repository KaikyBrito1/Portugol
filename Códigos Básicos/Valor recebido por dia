programa
{
	
	funcao inicio()
	{
		real numhoras, valordia, valorsem
		escreva ("Digite horas trabalhadas: ")
		leia(numhoras)
		valordia = numhoras * 30
		valorsem = valordia * 5
		escreva ("Valor recebido no dia é: ", valordia)
		escreva ("\n Valor recebido na semana é: ", valorsem) 
	}
}
